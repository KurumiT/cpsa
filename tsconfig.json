{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@middleware/*": ["src/middleware/*"],
      "@pages/*": ["src/components/pages/*"],
      "@helpers/*": ["src/utils/*"],
      "@public/*": ["public/*"]
    },
    "target": "esnext",
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowJs": true,
    "strictFunctionTypes": false,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "plugins": [{ "name": "typescript-tslint-plugin" }]
  },
  "include": ["src"]
}
